<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	xmlns:p="tapestry:parameter" t:type="layout" t:fullwidth="false"
	t:title="校园搜索" t:meta_keywords="" t:meta_description=""
	t:currentPage="Index">
	
	<div class="container">
		<div class="row-fluid">
			<div class="span6">
				<div class="pubmgr-mylist">
					<div class="section-header">
						<h3>Your Publications:</h3>
					</div>
					<div class="row-fluid" id="tabZone">
						<div class="t-tab-panel">
							<div class="t-tab-content">
								<div class="row-fluid">
									<p>Publications: ${getPublicationListSize() }</p>
									<t:loop source="publicationList" value="publication" index="index">
										<ul id="pub_list" class="rich-info-list publication-list rich-list small">
											<li pid="${publication.id }" class="s-item borderConf">
												<div style="width:24px;" class="fix-span1 pull-left">
													<span class="line-number">${lineNumber}</span>
													<div style="border:solid 1px red;background-color:rgba(255,0,0,0.3);width:10px; height:10px;margin:1px;"></div>
													<div style="border:solid 1px green;background-color:rgba(0,255,0,0.4);width:10px; height:10px;margin:1px;"></div>
												</div>
												<div style="margin-left:24px;margin-right:80px;" class="autospan">
													<h3>${publication.title }</h3>
													<div class="p authors">
														<span class="">${publication.authors}</span>
													</div>
													<div class="p pull-left">
														<span >${publication.jconf }</span> - <span>${publication.year }</span>
													</div>
													<div class="clear"></div>
												</div>
											</li>
										</ul>
									</t:loop>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		
			<div class="span5">
				<div class="pubmgr-mylist">
					<div class="section-header">
						<h3>Other Publications:</h3>
					</div>
					<div class="row-fluid t-zone" id="otherTabZone">
						<div class="t-tab-panel">
							<div class="t-tab-content">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</html>